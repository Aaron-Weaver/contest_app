<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/green_button_pressed" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:right="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/green_button" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:right="10dp"/>
        </shape>
    </item>
    <item android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/black" />
        </shape>
    </item>
</selector>